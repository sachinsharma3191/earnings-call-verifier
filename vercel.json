{
  "framework": "vite",
  "installCommand": "npm --prefix ui install",
  "devCommand": "npm --prefix ui run dev -- --port $PORT",
  "buildCommand": "npm run build",
  "outputDirectory": "ui/dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
